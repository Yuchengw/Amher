package com.amher.lib.objectProvider;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;
import java.util.Map;

import com.amher.business.bean.Post;
import com.amher.business.bean.PostList;
import com.amher.business.bean.User;

public class PostProvider {
	
	private static Map<String, Post> allUsers;
	/**
	 * mocking 
	 * */
	static {
		allUsers = new HashMap<String, Post>();
		Post u1 = new Post("1",new User("1", "Yucheng", "Wang", "ycwmike@gmail.com"), "Post1", "China", 1);
		Post u2 = new Post("2", new User("2", "George", "Lin", "gglin@gmail.com"), "Post2", "USA", 2) ;
		allUsers.put(u1.getId(), u1);
		allUsers.put(u2.getId(), u2);
	}

	public void add(User user) {
		allUsers.add(user);
	}

	public User get(int index) {
		return allUsers.get(index);
	}

	public List<User> getAll() {
		return allUsers.getUsers();
	}

	public void remove(int id) {
		allUsers.remove(id);
	}

	/**
	 * update is expensive, think before do it
	 * */
	public void update(User oldUser, User newUser) {
		List<User> allUserList = allUsers.getUsers();
		allUserList.set(allUserList.indexOf(oldUser), newUser);
	}
}
