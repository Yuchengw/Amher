package com.amher.service.logging;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.aspectj.lang.annotation.Pointcut;
 
@Aspect
public class UserControllerLogging {
 
	@Pointcut("execution * UserController.*(..)"
			+ ")")
    public void controllerPointcutter() {}
	
	//@Before("execution(* com.amher.bean.rest.controller.UserControllerInterface.(..))")
	@Before("controllerPointcutter()")
	public void logBefore(JoinPoint joinPoint) {
		System.out.println("Entering : " + joinPoint.getSignature().getName());
	}
 
}
