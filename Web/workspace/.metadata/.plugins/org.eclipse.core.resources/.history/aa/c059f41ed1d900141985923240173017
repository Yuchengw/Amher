package com.amher.lib.objectProvider;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;
import java.util.Map;

import com.amher.business.bean.Post;
import com.amher.business.bean.PostList;

public class PostProvider {
	
	private static Map<String, Post> allPosts;
	/**
	 * mocking 
	 * */
	static {
		allPosts = new HashMap<String, Post>();
		Post u1 = new Post("1", "Yucheng", "Wang", "ycwmike@gmail.com");
		Post u2 = new Post("2", "George", "Lin", "gglin@gmail.com");
		allPosts.put(u1.getId(), u1);
		allPosts.put(u2.getId(), u2);
	}

	public void add(Post u) {
		allPosts.put(u.getId(), u);
	}

	public Post get(String id) {
		return allPosts.get(id);
	}

	public List<Post> getAll() {
		List<Post> Posts = new ArrayList<Post>();
		for (Iterator<Post> it = allPosts.values().iterator(); it.hasNext();) {
			Post u = it.next();
			Posts.add(u);
		}
		return Posts;
	}

	public void remove(long id) {
		allPosts.remove(id);
	}

	public void update(Post u) {
		allPosts.put(u.getId(), u);
	}
}
